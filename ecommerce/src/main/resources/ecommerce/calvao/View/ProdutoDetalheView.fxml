<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ecommerce.calvao.Controller.ProdutoDetalheController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #90ee90;">
            <padding><Insets left="20.0" right="20.0" /></padding>
            <Label text="Calvão DE CRIA">
                <font><Font name="System Bold" size="24.0" /></font>
            </Label>
            <HBox alignment="CENTER_RIGHT" spacing="30.0" HBox.hgrow="ALWAYS">
                <Button style="-fx-background-color: transparent; -fx-font-size: 14pt;" text="Produtos" />
                <Button style="-fx-background-color: transparent; -fx-font-size: 14pt;" text="Promoções" />
                <Circle fill="WHITE" radius="10.0" stroke="BLACK" strokeType="INSIDE" />
                <Circle fill="WHITE" radius="10.0" stroke="BLACK" strokeType="INSIDE" />
            </HBox>
        </HBox>
    </top>

    <center>
        <VBox spacing="20.0" BorderPane.alignment="TOP_LEFT">
            <padding><Insets bottom="30.0" left="50.0" right="50.0" top="30.0" /></padding>
            
            <Button onAction="#handleVoltar" style="-fx-background-color: transparent; -fx-cursor: hand;" text="&lt; Voltar">
                <font><Font size="16.0" /></font>
            </Button>

            <HBox spacing="50.0" VBox.vgrow="ALWAYS">
                
                <StackPane prefHeight="500.0" prefWidth="500.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <Label fx:id="placeholderLabel" text="Carregando imagem..." textFill="#999999" />
                    <ImageView fx:id="produtoImage" fitHeight="450.0" fitWidth="450.0" pickOnBounds="true" preserveRatio="true" />
                </StackPane>

                <VBox spacing="15.0" HBox.hgrow="ALWAYS">
                    <Label fx:id="nomeLabel" text="Carregando nome do produto..." wrapText="true">
                        <font><Font name="System Bold" size="28.0" /></font>
                    </Label>

                    <Label fx:id="precoLabel" text="R$ 0,00" textFill="#00a650">
                        <font><Font name="System Bold" size="36.0" /></font>
                    </Label>

                    <Label text="Descrição do Produto" textFill="#333333">
                        <font><Font name="System Bold" size="16.0" /></font>
                        <VBox.margin><Insets top="10.0" /></VBox.margin>
                    </Label>

                    <Text fx:id="descricaoText" fill="#666666" strokeType="OUTSIDE" strokeWidth="0.0" text="Carregando descrição..." wrappingWidth="500.0">
                        <font><Font size="14.0" /></font>
                    </Text>

                    <HBox alignment="CENTER_LEFT" spacing="15.0">
                        <VBox.margin><Insets top="30.0" /></VBox.margin>
                        
                        <HBox alignment="CENTER" spacing="10.0" style="-fx-border-color: #00a650; -fx-border-radius: 5; -fx-padding: 5;">
                            <Button text="-" style="-fx-background-color: transparent; -fx-text-fill: #00a650; -fx-font-weight: bold;"/>
                            <Label text="1" style="-fx-font-size: 14pt;" />
                            <Button text="+" style="-fx-background-color: transparent; -fx-text-fill: #00a650; -fx-font-weight: bold;"/>
                        </HBox>

                        <Button prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: #00a650; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" text="Adicionar">
                            <font><Font name="System Bold" size="16.0" /></font>
                        </Button>
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>